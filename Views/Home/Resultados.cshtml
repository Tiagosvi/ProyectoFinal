<head>
<link href='https://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet'>
</head>
<body>
@{
    ViewData["Title"] = "Home Page";
    var resultados = (IEnumerable<ResultadosModel>)ViewBag.ListaResultados;
}

<br>

<div class="container">
        <div class = "row">
            <div class="col-md-6 pull-left">
<form method="POST" action='@Url.Action("SeleccionarLiga","Home")'>
    <div class="izq"></div>
<div class="sidebar-box">
    <select name="liga" class="select-css" onchange="this.form.submit()">
        <option value="0">Elegir</option>
        @foreach (LigasModel UnaLiga in ViewBag.ListaLigas)
        {
          if(UnaLiga.IdLiga==ViewBag.LigaSeleccionada)
          {  
              <option selected value="@UnaLiga.IdLiga">@UnaLiga.NombreLiga</option>
          }
          else
          {
              <option value="@UnaLiga.IdLiga">@UnaLiga.NombreLiga</option>
          }  
        }
    </select>

    @if (ViewBag.LigaSeleccionada > 0)
    {
            <select name="fecha" class= "select-css" onchange="this.form.submit()">
                <option value="0">Elegir</option>
            @foreach (FechasModel UnaFecha in ViewBag.ListaFechas)
            {
                
            <option value="@UnaFecha.IdFecha">@UnaFecha.Fecha</option>
            }
            </select>
       
    }
</div>
</form>
<div class="center">
 <div class="container">
  <div class="row">
        <div class="col-md-12">
     @if(resultados !=null){
    foreach (var res in resultados){
    <div class="card">
                <div class="card-body">
                     <h5 class="card-title">Resultado</h5>
                        <div class="card-text center"> 
                             <img src="@Url.Content(res.UrlImagenEquipo1)" alt="Logo Equipo" width="50" height="50"> @res.Goles1 - @res.Goles2  <img src="@Url.Content(res.UrlImagenEquipo2)" alt="Logo Equipo" width="50" height="50"> 
                
                <br>
        </div>
        </div>
    </div>
    <br>
    }}
</div>
</div>
</div>
</div>



</body>
