<br>
<h1 class="titulo center">Cargar Resultados</h1>

<br>
<br>

<div class="container">
        <div class = "row">
            <div class="col-md-6 pull-left">
<form method="POST" action='@Url.Action("CargaResultados","Home")'>
    <div class="izq"></div>
    <div class="sidebar-box">
     <select name="liga" class="select-css" onchange="this.form.submit()">
        <option value="0">Elegir</option>
                @foreach (LigasModel UnaLiga in ViewBag.ListaLigas)
        {
          if(UnaLiga.IdLiga==ViewBag.LigaSeleccionada)
          {  
              <option selected value="@UnaLiga.IdLiga">@UnaLiga.NombreLiga</option>
          }
          else
          {
              <option value="@UnaLiga.IdLiga">@UnaLiga.NombreLiga</option>
          }  
          
        }
        </select>

   

    @if (ViewBag.LigaSeleccionada > 0)
    {
        <select name="fecha" class="select-css"  onchange="this.form.submit()">
            <option value="0"> Elegir </option>
         @foreach (FechasModel UnaFecha in ViewBag.ListaFechas)
         {
            if(UnaFecha.IdFecha==ViewBag.FechaSeleccionada)
          {  
              <option selected value="@UnaFecha.IdFecha">@UnaFecha.Fecha</option>
          }
          else
          {
              <option value="@UnaFecha.IdFecha">@UnaFecha.Fecha</option>
          }  
          
            }
            </select>
       
    }

 </form>
<form method="POST" action='@Url.Action("GuardarResultado","Home")'>
    <input type= "hidden" name="IdFecha" value="@ViewBag.FechaSeleccionada" >
    
@if (ViewBag.ListaEquipos != null){
    <p>Equipo 1</p>
<select name="Equipo1" class= "select-css">
                <option value="0">Elegir</option>
            @foreach (EquiposModel UnEquipo in ViewBag.ListaEquipos)
            {
                <option value="@UnEquipo.IdEquipo">@UnEquipo.Nombre</option>
            }
                
            </select>
          <p>Equipo 2</p>
            <select name="Equipo2" class= "select-css">
                <option value="0">Elegir</option>
            @foreach (EquiposModel UnEquipo in ViewBag.ListaEquipos)
            {
                <option value="@UnEquipo.IdEquipo">@UnEquipo.Nombre</option>
            }
                
            </select>

            <label for="Name">Goles</label>
<input type="number" id="Equipo1" name="Goles1"/> 
<input type="number" id="Equipo2" name="Goles2"/>

<input class="btn btn-primary" type="submit" value="Guardar"/>


}


</form>

</div>

            
            